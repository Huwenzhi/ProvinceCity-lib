<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/md_black_1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="请选择" />
    </RelativeLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_pro"
            style="@style/linerlayout_style_h">

            <ImageView
                android:id="@+id/pro_imaege"
                style="@style/image_style_h" />

            <TextView
                android:id="@+id/pro_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">




            <LinearLayout style="@style/linerlayout_style_h">

                <ImageView
                    android:id="@+id/city_image"
                    style="@style/image_style_h" />

                <TextView
                    android:id="@+id/city_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">



            <LinearLayout style="@style/linerlayout_style_h">

                <ImageView
                    android:id="@+id/area_image"
                    style="@style/image_style_h" />

                <TextView
                    android:id="@+id/area_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">



            <LinearLayout style="@style/linerlayout_style_h">

                <ImageView
                    android:id="@+id/street_image"
                    style="@style/image_style_h" />

                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/street_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择" />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

   
    <TextView
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@color/md_blue_grey_200"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>